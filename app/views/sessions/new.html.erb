<h2>Sign in</h2>

<% form_for Session.new, :url => create_session_path do |form| %>
  <div class="text_field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>
  <div class="submit_field">
    <%= form.submit "Sign in", :disable_with => "Please wait..." %>
  </div>
<% end %>
