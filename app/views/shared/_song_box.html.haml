.song_box
  %h5= header
  .box_hider= link_to_function('show/hide', "Element.toggle('#{header.underscore.downcase}_song_box')", :class => "set-communications-button")
  .song_content{:id => "#{header.underscore.downcase}_song_box"}
    %h4
      %small= description
    .inside
      %ol
        - songs.each do |song|
          %li{:id => "#{header.sub(" ", "").underscore}_#{song.id}"}= "#{song.name} "+ (song.respond_to?(:plays) ? "(#{song.plays})" : "")
          =draggable_element("#{header.sub(" ", "").underscore}_#{song.id}", :revert => true, :ghosting => true)
